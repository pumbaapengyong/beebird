<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_left_drawer"
    android:background="#c0000000"
    android:orientation="vertical"
    android:layout_width="240dip"
    android:layout_gravity="start"
    android:layout_height="match_parent">
    
    <LinearLayout 
        android:id="@+id/ll_person"
        android:clickable="true"
        android:layout_width="fill_parent"
        android:layout_height="100dip"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
	    <ImageView 
	        android:id="@+id/people_logo"
	        android:layout_width="80dip"
	        android:layout_height="80dip"
	        android:layout_gravity="center"

	        />
	    <!-- android:background="@drawable/people_logo" -->
	    <TextView 
	        android:id="@+id/people_name"
	        android:layout_width="100dip"
	        android:layout_height="wrap_content"
	        android:gravity="center_vertical"
	        android:textColor="#ffffff"
	        android:paddingLeft="10dip"
	        android:text="点击登录"
	        android:textSize="15sp"
            />
	    <ImageView 
	        android:id="@+id/people_logo"
	        android:layout_width="40dip"
	        android:layout_height="10dip"
	        android:layout_gravity="center_vertical"
	        android:src="@drawable/arrow_checked"
	        />
    </LinearLayout>
    

    <LinearLayout
        android:id="@+id/ll_random" 
        android:clickable="true"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:orientation="horizontal"
        android:background="#c01C9B26"
        android:gravity="center"
        >
        <ImageView 
            android:layout_width="80dip"
            android:layout_height="25dip"
            android:gravity="center"
            android:src="@drawable/best_checked"
            />
        <TextView 
            android:layout_width="120dip"
            android:layout_height="fill_parent"
            android:text="@string/list_left_one"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:gravity="center_vertical"
            />
        <ImageView 
	        android:layout_width="40dip"
	        android:layout_height="10dip"
	        android:layout_gravity="center_vertical"
	        android:src="@drawable/arrow_checked"
	        />
    </LinearLayout>

    <LinearLayout 
        android:id="@+id/ll_liked" 
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:clickable="true"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <ImageView 
            android:layout_width="80dip"
            android:layout_height="25dip"
            android:src="@drawable/liked_checked"
            android:gravity="center"
            />
        <TextView 
            android:layout_width="120dip"
            android:layout_height="fill_parent"
            android:text="@string/list_left_two"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:textColor="#ffffff"
            />
        <ImageView 
	        android:id="@+id/people_logo"
	        android:layout_width="40dip"
	        android:layout_height="10dip"
	        android:layout_gravity="center"
	        android:src="@drawable/arrow_nonchecked"
	        />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_setting"  
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:clickable="true"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <ImageView 
            android:layout_width="80dip"
            android:layout_height="25dip"
            android:layout_gravity="center"
            android:src="@drawable/setting_checked"
            />
        <TextView 
            android:layout_width="120dip"
            android:layout_height="fill_parent"
            android:text="@string/list_left_three"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:textColor="#ffffff"
            />
        <ImageView 
	        android:id="@+id/people_logo"
	        android:layout_width="40dip"
	        android:layout_height="10dip"
	        android:layout_gravity="center_vertical"
	        android:src="@drawable/arrow_nonchecked"
	        />
    </LinearLayout>




</LinearLayout>