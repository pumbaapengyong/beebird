<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_personal_fragment"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#E5E5E5"
    android:orientation="vertical" >
    <FrameLayout 
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dip"
        >
        <ImageView 
            android:id="@+id/iv_personal_pic"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            
            />
        <ImageButton 
            android:id="@+id/ib_personal_newpic"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:layout_marginTop="100dip"
            android:layout_marginLeft="100dip"
            android:background="@drawable/choose_pic"
            />
        
    </FrameLayout>
    <LinearLayout 
        android:layout_width="200dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dip"
        android:orientation="horizontal"
        >
        <TextView 
            android:layout_width="60dip"
            android:layout_height="wrap_content"
            android:text="用户名"
            android:textColor="@android:color/darker_gray"
            android:gravity="center"
            android:textSize="15sp"
            />
        <TextView 
            android:id="@+id/tv_personal_username"
            android:layout_width="140dip"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="15sp"
            />

    </LinearLayout>

    <Button 
        android:id="@+id/bt_changepassword"
        android:layout_width="200dip"
        android:layout_height="40dip"
        android:layout_marginTop="30dip"
        android:text="修改密码"
        android:textSize="15sp"
        android:textColor="#737373"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/button_transparent_selector"
        />
    <Button 
        android:id="@+id/bt_loginout"
        android:layout_width="200dip"
        android:layout_height="40dip"
        android:layout_marginTop="20dip"
        android:text="注销"
        android:textSize="15sp"
        android:gravity="center"
        android:layout_gravity="center"
        android:textColor="@android:color/white"
        android:background="@drawable/button_yellow_selector"
        />
    
    
</LinearLayout>