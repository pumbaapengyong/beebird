<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >
    <ImageView 
        android:id="@+id/iv_item_logo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_margin="10dip"
        android:layout_width="90dip"
        android:layout_height="90dip"
        />
    <TextView 
        android:id="@+id/tv_item_jobname"
        android:layout_width="120dip"
        android:layout_height="40dip"
        android:textColor="#0F4F86"
        android:textSize="18sp"
        android:layout_toRightOf="@id/iv_item_logo"
        android:layout_alignTop="@id/iv_item_logo"
        android:gravity="center_vertical"
        />
    <ImageView 
        android:id="@+id/the_upper_line"
        android:layout_toRightOf="@id/tv_item_jobname"
        android:layout_alignTop="@id/iv_item_logo"
        android:layout_marginTop="10dip"
        android:layout_margin="5dip"
        android:layout_width="1dip"
        android:layout_height="20dip"
        android:background="@android:color/darker_gray"
        />
    <ImageView 
        android:id="@+id/the_red_heart"
        android:layout_toRightOf="@id/the_upper_line"
        android:layout_alignTop="@id/iv_item_logo"
        android:layout_marginTop="10dip"
        android:layout_margin="5dip"
        android:layout_width="20dip"
        android:layout_height="20dip"
        android:background="@drawable/red_heart"
        />
    <TextView 
        android:id="@+id/tv_item_likenumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="15sp"
        android:layout_toRightOf="@id/the_red_heart"
        android:layout_alignTop="@id/iv_item_logo"
        android:gravity="center_vertical"
        />
    <ImageView 
        android:id="@+id/the_star"   
        android:layout_width="20dip"
        android:layout_height="20dip"
        android:layout_toRightOf="@id/iv_item_logo"
        android:layout_alignBottom="@id/iv_item_logo"
        android:layout_marginBottom="20dip"
        android:layout_marginRight="5dip"
        android:background="@drawable/star"
        />
    <TextView 
        android:id="@+id/tv_item_salary"
        android:layout_width="95dip"
        android:layout_height="20dip"
        android:textColor="@android:color/black"
        android:textSize="13sp"
        android:layout_toRightOf="@id/the_star"
        android:layout_alignBottom="@id/iv_item_logo"
        android:layout_marginBottom="20dip"
        android:gravity="center_vertical"
        />
    <ImageView 
        android:id="@+id/the_lower_line"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:layout_width="1dip"
        android:layout_height="20dip"
        android:background="@android:color/darker_gray"
        android:layout_toRightOf="@id/tv_item_salary"
        android:layout_alignBottom="@id/iv_item_logo"
        android:layout_marginBottom="20dip"
        />
    <ImageView 
        android:id="@+id/the_place_icon"
        android:layout_toRightOf="@id/the_lower_line"
        android:layout_alignBottom="@id/iv_item_logo"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:layout_width="20dip"
        android:layout_height="20dip"
        android:background="@drawable/location_icon"
        android:layout_marginBottom="20dip"
        />
    <TextView 
        android:id="@+id/tv_item_workplace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:layout_toRightOf="@id/the_place_icon"
        android:layout_alignBottom="@id/iv_item_logo"
        android:gravity="center_vertical"
        android:layout_marginBottom="20dip"
        />

    
    
</RelativeLayout>